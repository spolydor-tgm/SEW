package general;

import keno.*;
import slots.*;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.JTextArea;
import javax.swing.JButton;

/**
 * @author Tony
 * @version 1.0
 */
public class ChooseGUI_old extends JFrame implements ActionListener {

	private static final long serialVersionUID = -8849249081274390947L;
	private JPanel contentPane;
	private static String browser;

	/**
	 * Create the frame.
	 */
	public ChooseGUI_old() {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 250, 320);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);
		contentPane.setLayout(null);

		JTextArea textArea = new JTextArea(
				"You can now choose the\nbrowser which the bot will\nuse in the process:");
		textArea.setBounds(20, 11, 214, 68);
		textArea.setEditable(false);
		textArea.setBackground(getBackground());
		contentPane.add(textArea);

		JButton btnFirefox = new JButton("Firefox");
		btnFirefox.setBounds(53, 100, 89, 23);
		btnFirefox.addActionListener(this);
		contentPane.add(btnFirefox);

		JButton btnChrome = new JButton("Chrome");
		btnChrome.setBounds(53, 148, 89, 23);
		btnChrome.addActionListener(this);
		contentPane.add(btnChrome);

		/**JButton btnIe = new JButton("IE");
		btnIe.setBounds(65, 200, 89, 23);
		btnIe.addActionListener(this);
		contentPane.add(btnIe);
		**/
	}

	public static String getBrowser() {
		return browser;
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		JButton o = (JButton) e.getSource();
		browser = o.getText();

		// System.out.println(browser);

		if (!browser.equals("")) {
			this.dispose();
			
			
			
			switch(SelectGameGUI.getGame()) {
			case "Keno":
				KenoWindowGUI kgui = new KenoWindowGUI();	
				startWindowGUI(kgui);
				kgui.setSize(370, 420);
				break;
			default:
				SlotsWindowGUI sgui = new SlotsWindowGUI();
				startWindowGUI(sgui);
				break;
			}
		}
	}

	private static void startWindowGUI(JFrame gui) {
		gui.setSize(370, 380);
		gui.setResizable(false);
		gui.setVisible(true);
		gui.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	}
}
